{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && cd frontend && npm ci && npm run build && cd ../backend && npm ci",
    "installCmd": "npm ci"
  },
  "deploy": {
    "startCommand": "node backend/server.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "buildCommand": "NODE_ENV=production npm ci && cd frontend && NODE_ENV=production npm ci && npm run build && cd ../backend && NODE_ENV=production npm ci",
      "startCommand": "NODE_ENV=production node backend/server.js"
    }
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "NIXPACKS_NODE_VERSION": "18",
    "NIXPACKS_NPM_VERSION": "9",
    "NIXPACKS_PKGS": "nodejs-18_x",
    "NIXPACKS_CACHE_DIRS": "/app/frontend/node_modules,/app/backend/node_modules"
  }
